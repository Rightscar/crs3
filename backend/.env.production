# Production Environment Configuration
# Copy this to .env and fill in your values

# Application Settings
DEBUG=False
ENVIRONMENT=production
SECRET_KEY=your-very-secure-secret-key-change-this-in-production
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database - PostgreSQL
DATABASE_URL=postgresql://postgres:your-secure-password@postgres:5432/literaryai
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_DB=0

# Neo4j
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-secure-neo4j-password

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENV=us-east-1
PINECONE_INDEX_NAME=character-embeddings

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=["https://your-frontend-domain.com"]

# File Upload
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=104857600  # 100MB
ALLOWED_EXTENSIONS=["pdf","txt","docx","epub","md"]

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL=INFO

# Docker Environment Variables
POSTGRES_DB=literaryai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password
PGADMIN_EMAIL=admin@your-domain.com
PGADMIN_PASSWORD=your-secure-pgadmin-password