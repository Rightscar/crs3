# Universal Document Reader & AI Processor - Environment Configuration
# ================================================================

# ===== CORE API KEYS =====
OPENAI_API_KEY=your_openai_api_key_here
# Get your key from: https://platform.openai.com/api-keys

# ===== APPLICATION SETTINGS =====
MAX_CONCURRENT_USERS=10
ENABLE_CACHING=true
LOG_LEVEL=INFO
APP_NAME="Universal Document Reader & AI Processor"
APP_VERSION="1.0.0"

# ===== FEATURE TOGGLES =====
ENABLE_SPACY=true
ENABLE_ADVANCED_NLP=true
ENABLE_OPENAI_ENHANCEMENT=true
ENABLE_AUTO_PROCESSING=true
ENABLE_COLLABORATIVE_FEATURES=false
ENABLE_ANALYTICS=true

# ===== PERFORMANCE SETTINGS =====
MAX_DOCUMENT_SIZE_MB=50
MAX_PAGES_PER_BATCH=20
CACHE_EXPIRY_HOURS=24
MAX_PROCESSING_TIME_SECONDS=300
MEMORY_LIMIT_MB=512

# ===== PROCESSING SETTINGS =====
DEFAULT_AI_MODEL=gpt-3.5-turbo
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS_PER_REQUEST=1000
QUESTIONS_PER_PAGE_DEFAULT=3
CONTEXT_WINDOW_DEFAULT=3

# ===== EXPORT SETTINGS =====
MAX_EXPORT_SIZE_MB=100
ALLOWED_EXPORT_FORMATS=json,csv,markdown,html,pdf,docx,jsonl,txt
DEFAULT_EXPORT_FORMAT=json
ENABLE_BULK_EXPORT=true

# ===== SECURITY SETTINGS =====
ENABLE_FILE_VALIDATION=true
ALLOWED_FILE_TYPES=pdf,docx,txt,md,epub,html
MAX_FILE_SIZE_MB=50
ENABLE_CONTENT_FILTERING=true

# ===== UI/UX SETTINGS =====
THEME=dark
ENABLE_ANIMATIONS=true
ENABLE_KEYBOARD_SHORTCUTS=true
DEFAULT_ZOOM_LEVEL=100
ENABLE_MOBILE_OPTIMIZATION=true

# ===== DEVELOPMENT SETTINGS =====
DEBUG_MODE=false
ENABLE_PROFILING=false
LOG_PERFORMANCE=true
ENABLE_MOCK_DATA=false