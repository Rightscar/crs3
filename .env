# Environment Configuration for LiteraryAI Studio
# =============================================

# API Keys (Replace with your actual keys)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./data/character_creator.db
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-change-in-production
SESSION_TIMEOUT=3600

# File Upload Settings
UPLOAD_MAX_SIZE=100MB
UPLOAD_DIR=./uploads

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW=3600

# Character Evolution Settings
EVOLUTION_ENABLED=True
EMOTIONAL_MEMORY_ENABLED=True
DOPAMINE_ENGINE_ENABLED=True

# Export Settings
EXPORT_FORMATS=json,jsonl,pdf,docx,csv
MAX_EXPORT_SIZE=50MB

# Analytics
ANALYTICS_ENABLED=True
TRACKING_ENABLED=True

# Development Settings
AUTO_RELOAD=True
HOT_RELOAD=True