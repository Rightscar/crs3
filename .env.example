# Environment Variables for Universal Document Reader
# ==================================================

# Required for AI features (Optional for basic functionality)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Security (Recommended)
SECRET_KEY=your_secret_key_here

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
MAX_FILE_SIZE_MB=50
CACHE_TTL=1800
MAX_MEMORY_MB=256

# Feature Toggles
ENABLE_CACHING=true
USE_ENHANCED_OCR=false
USE_INTELLIGENT_PROCESSOR=true
USE_GPT_DIALOGUE=true

# Performance Settings
MAX_CONCURRENT_USERS=10
SESSION_TIMEOUT=3600
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# File Upload Settings
UPLOAD_MAX_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,docx,txt,md,epub,rtf,html

# Database (SQLite by default, can be overridden)
DATABASE_URL=sqlite:///app.db

# Streamlit Configuration (Auto-set by Render)
STREAMLIT_SERVER_PORT=10000
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false