# LiteraryAI Studio Environment Variables
# Copy this file to .env and fill in your values

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Database
DATABASE_URL=sqlite:///data/literaryai.db
# For production: DATABASE_URL=postgresql://user:pass@localhost/dbname

# Redis (for caching and queues)
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
SESSION_TIMEOUT=3600

# File Upload
UPLOAD_MAX_SIZE_MB=100
ALLOWED_EXTENSIONS=pdf,docx,txt,md,epub,rtf,html,odt

# LLM Configuration
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.8
LLM_MAX_TOKENS=2000

# Application
APP_ENV=development  # development, staging, production
DEBUG=True
LOG_LEVEL=INFO

# Feature Flags
ENABLE_OCR=True
ENABLE_ANALYTICS=True
ENABLE_EXPORT=True
ENABLE_CHARACTER_FUSION=True
ENABLE_CHARACTER_EVOLUTION=True

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour

# Storage (for production)
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# S3_BUCKET=literaryai-uploads

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn
# DATADOG_API_KEY=your-datadog-key